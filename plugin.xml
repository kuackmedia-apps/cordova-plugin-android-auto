<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-android-auto" version="0.1.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0">

    <name>AndroidAuto</name>
    <description>Plugin b√°sico Android Auto con MediaBrowserServiceCompat</description>
    <license>MIT</license>

    <js-module src="www/AndroidAuto.js" name="AndroidAuto">
        <clobbers target="cordova.plugins.AndroidAuto" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AndroidAutoPlugin">
                <param name="android-package" value="com.kuackmedia.androidauto.AndroidAutoPlugin" />
            </feature>
        </config-file>
        <source-file src="src/android/res/xml/automotive_app_desc.xml" target-dir="res/xml" />
        <source-file src="src/android/AndroidAutoPlugin.java" target-dir="src/com/kuackmedia/androidauto" />
        <source-file src="src/android/AndroidAutoService.java" target-dir="src/com/kuackmedia/androidauto" />

        <source-file src="src/android/player/PlaybackManager.java" target-dir="src/com/kuackmedia/androidauto/player" />
        <source-file src="src/android/player/QueueManager.java" target-dir="src/com/kuackmedia/androidauto/player" />
        <source-file src="src/android/utils/LocalStorageUtils.java"
                     target-dir="src/com/kuackmedia/androidauto/utils" />
        <source-file src="src/android/api/KuackApiClient.java"
                     target-dir="src/com/kuackmedia/androidauto/api" />
        <source-file src="src/android/models/MediaItemFactory.java"
                     target-dir="src/com/kuackmedia/androidauto/models" />

        <framework src="androidx.media:media:1.7.0"/>
    </platform>
    <hook src="hooks/android/after_prepare/update_manifest.js" type="after_prepare"/>

</plugin>
